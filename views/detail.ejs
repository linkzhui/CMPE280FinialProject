            <script>
                function addToCart(){
                    var d = new Date();
                    d.setTime(d.getTime() + (1*24*60*60*1000));
                    var expires = "expires="+d.toUTCString();
                    var e = document.getElementById("itemNum");
                    var selectNum = e.options[e.selectedIndex].value;
                    var product = "<%=type+product_id%>";
                    var existNum = getCookie(product);
                    var num;
                        if(existNum.length==0)
                        {
                            num = selectNum;
                        }
                        else
                        {
                            num = parseInt(existNum)+parseInt(selectNum);
                        }
                    // document.cookie = product+"="+num;
                    document.cookie = product+"_image"+"="+"<%=image%>"+ "; " + expires +";path=/";
                    document.cookie = product+"_price"+"="+"<%=price%>"+ "; " + expires +";path=/";
                    document.cookie = product+"_name"+"="+"<%=productName%>"+ "; " + expires +";path=/";
                    document.cookie = product+"="+num+ "; " + expires +";path=/";
                    alert("Add "+"<%=productName%>"+" to cart successful!");
                }
                function getCookie(cname) {
                    var name = cname + "=";
                    var decodedCookie = decodeURIComponent(document.cookie);
                    var ca = decodedCookie.split(';');
                    for(var i = 0; i <ca.length; i++) {
                        var c = ca[i];
                        while (c.charAt(0) == ' ') {
                            c = c.substring(1);
                        }
                        if (c.indexOf(name) == 0) {
                            return c.substring(name.length, c.length);
                        }
                    }
                    return "";
                }
            </script>
            <button class="ui black button" onclick="addToCart()">Add to Cart</button>
