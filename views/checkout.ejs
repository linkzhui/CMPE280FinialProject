    <script>
        function checkoutFunction() {

            var inpObj = document.getElementById("card[expire-year]");
            if (!inpObj.checkValidity()) {
                var txt = "validation year must after 2018";
                document.getElementById("ErrorExpireYear").innerHTML = txt;
            }

            var inpObj = document.getElementById("card[number]");
            if (!inpObj.checkValidity()) {
                var txt = "must be 16 length number";
                document.getElementById("ErrorCreditCard").innerHTML = txt;
            }


            // delete cookie at checkout
            var cookies = document.cookie.split(";");

            for (var i = 0; i < cookies.length; i++) {
                var cookie = cookies[i];
                var eqPos = cookie.indexOf("=");
                var name = eqPos > -1 ? cookie.substr(0, eqPos) : cookie;
                document.cookie = name + "=;expires=Thu, 01 Jan 1970 00:00:00 GMT";
            }

            alert("Checkout Successful!");
        }
    </script>

